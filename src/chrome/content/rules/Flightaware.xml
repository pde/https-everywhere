<ruleset name="Flightaware">
    <target host="flightaware.com" />
    <target host="*.flightaware.com" />

    <rule from="^https?://flightaware\.com/"
        to="https://flightaware.com/" />
    <rule from="^http://([A-Za-z][A-Za-z])?\.flightaware\.com/"
        to="https://$1.flightaware.com/" />
</ruleset>
